                    <TextBox x:Name="txtNewUserTelehone" HorizontalAlignment="Left" Height="23" Margin="50.791,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    <Label Content="Email" HorizontalAlignment="Left" Margin="50.791,146,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="txtNewUserEmail" HorizontalAlignment="Left" Height="23" Margin="50.791,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    <Label Content="Age" HorizontalAlignment="Left" Margin="50.791,212,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.411,0.27" Grid.Column="1"/>
