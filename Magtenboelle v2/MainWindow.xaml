            <TabItem Header="Kalender">
                <Grid>
                    <ListBox x:Name="listBoxCalender" HorizontalAlignment="Left" Height="251" Margin="28,110,0,0" VerticalAlignment="Top" Width="757" Background="#FFB2B2B2"/>
